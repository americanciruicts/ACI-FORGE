# ACI FORGE Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://postgres:secure_db_password@localhost:5433/aci_dashboard

# Redis Configuration
REDIS_URL=redis://:redis_secure_password@localhost:6379/0

# Security Keys (Generate new ones for production)
SECRET_KEY=ACI-FORGE-Super-Secure-Secret-Key-2025-32-Characters-Long
JWT_SECRET_KEY=ACI-JWT-Secret-Key-For-Access-Tokens-32-Characters-Long-2025
JWT_REFRESH_SECRET_KEY=ACI-JWT-Refresh-Secret-Key-Different-From-Access-32-Chars

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=http://acidashboard.aci.local:2005,http://localhost:2005,http://acidashboard.aci.local:4000,http://acidashboard.aci.local:4001
FRONTEND_URL=http://acidashboard.aci.local:2005

# Security Settings
BCRYPT_ROUNDS=12
ACCESS_TOKEN_EXPIRE_MINUTES=45
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Security
SESSION_TIMEOUT=30
MAX_CONCURRENT_SESSIONS=100

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_DURATION=15

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_APP_ENV=development
# Docker Compose Project Name
COMPOSE_PROJECT_NAME=aci-forge
